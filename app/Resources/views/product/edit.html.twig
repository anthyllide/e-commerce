{% extends "sil11VitrineBundle::adminLayout.html.twig" %}
{% block title %}{{ parent() }} - Editer le produit {{ product.item }} {% endblock %}
{% block content %}
    <h3>Modifier un produit</h3>

    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">

        {{ form_label(edit_form.item, "Nom : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.item, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.reference, "Référence : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.reference, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.price, "Prix (TTC en €) : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.price, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.description, "Description : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.quantity, "Quantité : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.quantity, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.category, "Catégorie : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.file, "Image : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.file, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-primary btn-sm" type="submit" value="modifier le produit" />
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
