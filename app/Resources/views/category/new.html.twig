{% extends "sil11VitrineBundle::adminLayout.html.twig" %}
{% block title %}{{ parent() }} - Création d'une catégorie {% endblock %}
{% block content %}
    <h3>Création d'une nouvelle catégorie</h3>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">

        {{ form_label(form.name, "Nom : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(form.file, "Image : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-primary btn-sm" type="submit" value="créer une catégorie" />
    </div>
    {{ form_end(form) }}

{% endblock %}
