{% extends "sil11VitrineBundle::adminLayout.html.twig" %}
{% block title %}{{ parent() }} - Editer la catégorie {{ category.name }} {% endblock %}
{% block content %}
    <h3>Modifier la catégorie "{{ category.name }}"</h3>

    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group">

        {{ form_label(edit_form.name, "Nom : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

        {{ form_label(edit_form.file, "Image : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(edit_form.file, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-primary btn-sm" type="submit" value="modifier la catégorie" />
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
