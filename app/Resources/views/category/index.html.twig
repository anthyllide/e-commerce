{% extends "sil11VitrineBundle::adminLayout.html.twig" %}
{% block title %}{{ parent() }} - Liste des catégories{% endblock %}
{% block content %}
    <h3>Liste des catégories de produits</h3>
    <table class="table-admin table table-bordered">
        <thead>
            <tr>
                <th>Id catégorie</th>
                <th>Désignation</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <div class="col-sm-5 btn btn-xs btn-primary" >
                        <a href="{{ path('category_edit', { 'id': category.id }) }}">éditer</a>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-5 btn btn-xs btn-danger" >
                        <a href="{{ path('category_delete', { 'id': category.id }) }}">supprimer</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
