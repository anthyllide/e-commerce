{% extends "sil11VitrineBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Login{% endblock %}
{% block content %}
    <h3>Connectez-vous</h3>
{% if error is defined and error == true %}
    <div class="alert alert-danger">{{ error.message }}</div>
{% elseif messageSuccess is defined %}
    <div class="alert alert-success">{{ messageSuccess }}</div>
{% endif %}
<form class="form-horizontal" action="{{ path('login_check') }}" method="post">
    <div class="form-group">
        <label class="col-sm-3 control-label" for="username">E-mail :</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="username" name="_username" value="{% if last_username is defined %}{{ last_username }}{% endif %}" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label" for="password">Mot de passe :</label>
        <div class="col-sm-4">
            <input class="form-control" type="password" id="password" name="_password" />
        </div>
    </div>
    <div id="inscrivez-vous" class="form-group">
        <a class="col-sm-6" href="{{ path('customer_new') }}" >Si vous Ãªtes nouveau client : inscrivez-vous.</a>
    </div>
    <input type="hidden" name="_target_path" value="/accueil" />
    <div class="form-group">
        <input class="btn btn-primary btn-sm" type="submit" value="Se connecter"/>
    </div>
</form>
{% endblock %}