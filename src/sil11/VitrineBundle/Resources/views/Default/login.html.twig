{% extends "sil11VitrineBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Se connecter {% endblock %}
{% block content %}
    <h3>Connectez-vous</h3>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">

    {{ form_label(form.mail, "Votre email", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
    {{ form_errors(form.mail) }}

        <div class="col-sm-4">
         {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">

    {{ form_label(form.password, "Votre mot de passe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
    {{ form_errors(form.password) }}

        <div class="col-sm-4">
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-primary btn-sm" type="submit" value="Se connecter" />
    </div>
    {{ form_end(form) }}
{% endblock %}